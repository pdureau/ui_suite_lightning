{% if variant != '' %}
  {% set variants = variant|split('__') %}
  {% for variant in variants %}
    {% set attributes = attributes.addClass('slds-tabs_' ~ variant|lower|replace({'_': '-'})) %}
  {% endfor %}
{% endif %}


{% if variant|lower != 'sub_tabs' %}
<div{{ attributes.addClass('slds-tabss_default') }}>
  <ul class="slds-tabs_default__nav" role="tablist">
    {% for item in items %}
      {% set item_attributes = item.attributes ? create_attribute(item.attributes) : create_attribute() %}
      {% set item_attributes = item.active ? item_attributes.addClass('slds-is-active') : item_attributes %}
      <li{{ item_attributes.addClass('slds-tabs_default__item') }} title="{{ item.label }}" role="presentation">
        <a class="slds-tabs_default__link" href="{{ item.uri }}" role="tab" tabindex="0" aria-selected="true" aria-controls="tab-default-1">{{ item.label }}</a>
      </li>
    {% endfor %}
  </ul>
</div>

{% else %}

<div class="slds-tabs_default slds-sub-tabs">
  <ul class="slds-tabs_default__nav" role="tablist">
    {% for item in items %}
      {% set item_attributes = item.attributes ? create_attribute(item.attributes) : create_attribute() %}
      {% set item_attributes = item.active ? item_attributes.addClass('slds-active') : item_attributes %}
      <li{{ item_attributes.addClass('slds-tabs_default__item slds-sub-tabs__item slds-grid slds-grid_vertical-align-center') }} role="presentation">
        <a aria-controls="subtab-tabpanel-01" aria-selected="true" class="slds-tabs_default__link slds-p-horizontal_xx-small" href="{{ item.uri }}" role="tab" tabindex="0" title="00071938">
          <span class="slds-indicator-container"></span>
          <span class="slds-truncate" title="{{ item.label }}">{{ item.label }}</span>
        </a>
      </li>
      {% endfor %}
  </ul>
</div>

{% endif %}
